@model AppUser
@{
    Layout = null;
}
<link href="~/additionalcss/logincss.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet" />
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet" />
<!-- MDB -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.css"
      rel="stylesheet" />
<div class="loginBox">
    <img class="user" src="https://i.ibb.co/yVGxFPR/2.png" height="100px" width="100px">
    <h3>Oturum Açın</h3>
    <form  method="post">
        <div class="inputBox">
            <input id="uname" type="text" name="Username" placeholder="Kullanıcı Adı" asp-for="UserName">
           
        </div>
        <div class="inputBox">
            <input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Şifreniz" asp-for="PasswordHash">

        </div>

        <button class="btn btn-light" type="submit" value="Giriş Yap" style="text-align:center">Giriş Yap</button>
        
    </form>
    <a href="#">Şifremi Unuttum<br> </a>
    <div class="text-center">
        <a href="/Register/SignUp/"><p style="color: #59238F;">Kayıt Ol</p></a>
    </div>
    <p class="text-center mb-3 mt-2">Sosyal Medya Hesabıyla Giriş Yap</p>
    <div class="row mx-auto ">
        
        <div class="col-4">
            <!-- Google -->
            <a class="btn btn-primary" style="background-color: #dd4b39;" href="#!" role="button">
                <i class="fab fa-google"></i>
            </a>



        </div>
        <div class="col-4">
            <!-- Instagram -->
            <a class="btn btn-primary" style="background-color: #ac2bac;" href="#!" role="button">
                <i class="fab fa-instagram"></i>
            </a>

        </div>
        <div class="col-4">
            <!-- Facebook -->
            <a class="btn btn-primary" style="background-color: #3b5998;" href="#!" role="button">
                <i class="fab fa-facebook-f"></i>
            </a>

        </div>
       
      
   
      
    
    </div>

</div>